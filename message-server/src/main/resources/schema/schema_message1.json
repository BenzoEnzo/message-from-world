{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserMessage",
  "description": "Schema for messages sent by users via Kafka",
  "type": "object",
  "properties": {
    "messageId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the message"
    },
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier of the user"
        },
        "username": {
          "type": "string",
          "minLength": 2,
          "description": "Username of the user"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the user"
        },
        "role": {
          "type": "string",
          "enum": ["ADMIN", "USER", "GUEST"],
          "description": "Role of the user"
        }
      },
      "required": ["id", "username", "email", "role"],
      "description": "User information"
    },
    "content": {
      "type": "string",
      "minLength": 1,
      "description": "Content of the message"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the message was sent"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "ipAddress": {
          "type": "string",
          "format": "ipv4",
          "description": "IP address of the user when sending the message"
        },
        "device": {
          "type": "string",
          "description": "Device information from which the message was sent"
        }
      },
      "additionalProperties": true,
      "description": "Additional metadata for the message"
    }
  },
  "required": ["messageId", "user", "content", "timestamp"],
  "additionalProperties": false
}
